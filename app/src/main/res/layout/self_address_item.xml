<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/rl_address_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
    <CheckBox
        android:id="@+id/cb_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/checkbox_bg_selector"
        android:button="@null"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:checked="false"
        />

    <TextView
        android:id="@+id/tv_address_desc"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cb_address"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:text="@string/my_address"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/iv_address_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/cart_item_edit"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_default_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_address"
        android:textColor="@color/red"
        android:layout_below="@+id/rl_address_back"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:visibility="visible"/>

</RelativeLayout>