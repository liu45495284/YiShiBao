<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_categray_list"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/i3"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/tv_categry_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_categray_list"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        android:text="HelloKitty粉色套装洗发水送卡通手机壳"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_categray_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_categray_list"
        android:layout_below="@+id/tv_categry_title"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:text="优惠组合套餐2合1"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tv_categray_integray"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/iv_categray_list"
        android:layout_below="@+id/tv_categray_type"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:text="6952积分"
        android:textColor="@color/red"
        />


</android.support.percent.PercentRelativeLayout>