<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xnliang.yishibao.view.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/home_group"
        android:layout_below="@+id/toolbar">
    </FrameLayout>

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/home_group"
        android:layout_below="@+id/toolbar">
    </android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@+id/home_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:background="@color/red"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/home_radio_one"
            style="@style/MMTabButton"
            android:checked="true"
            android:drawableTop="@drawable/tab_home"
            android:text="@string/tab_home"
            android:textColor="@color/mainradio_textcolor" />

        <RadioButton
            android:id="@+id/home_radio_two"
            style="@style/MMTabButton"
            android:drawableTop="@drawable/tab_travel"
            android:text="@string/tab_travel"
            android:textColor="@color/mainradio_textcolor" />

        <RadioButton
            android:id="@+id/home_radio_three"
            style="@style/MMTabButton"
            android:drawableTop="@drawable/tab_find"
            android:text="@string/tab_found"
            android:textColor="@color/mainradio_textcolor" />

        <RadioButton
            android:id="@+id/home_radio_four"
            style="@style/MMTabButton"
            android:drawableTop="@drawable/tab_shop"
            android:text="@string/tab_shop"
            android:textColor="@color/mainradio_textcolor" />

        <RadioButton
            android:id="@+id/home_radio_five"
            style="@style/MMTabButton"
            android:drawableTop="@drawable/tab_self"
            android:text="@string/tab_self"
            android:textColor="@color/mainradio_textcolor" />

    </RadioGroup>

</RelativeLayout>
