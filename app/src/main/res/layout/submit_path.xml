<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_path_icon"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/path_icon"/>

    <TextView
        android:id="@+id/tv_path_detail"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_path_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="@string/order_submit_path"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/iv_submit_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/back_arrow_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        />



</RelativeLayout>